# Production Environment Configuration for ERMITS CyberSoluce®
# This file contains production-specific environment variables

# Application Configuration
VITE_APP_NAME="ERMITS CyberSoluce®"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="production"

# API Configuration - These should be set in your deployment platform
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-production-anon-key

# Feature Flags for Production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_REAL_TIME=true

# Security Configuration
VITE_CSP_REPORT_URI=https://report.ermits-cybersoluce.com/csp
VITE_ALLOWED_ORIGINS=https://ermits-cybersoluce.com

# Performance Configuration
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# Monitoring and Analytics
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_UPLOAD_RATE_LIMIT=10

# Session Management
VITE_SESSION_TIMEOUT=28800
VITE_REMEMBER_ME_DURATION=2592000

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.csv,.xlsx,.json

# Health Check Configuration
VITE_HEALTH_CHECK_INTERVAL=60000
VITE_CONNECTIVITY_CHECK_INTERVAL=30000

# Backup and Sync Configuration
VITE_AUTO_BACKUP_ENABLED=true
VITE_SYNC_INTERVAL=300000