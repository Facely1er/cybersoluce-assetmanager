# ERMITS CyberSoluce® Environment Configuration
# Copy this file to .env.local and update with your actual values

# Application Configuration
VITE_APP_NAME="ERMITS CyberSoluce®"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Comprehensive Asset Inventory Management Tool"

# Supabase Configuration (Required for production)
# 1. Create a Supabase project at https://supabase.com
# 2. Go to Project Settings → API
# 3. Copy your Project URL and anon key
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Optional: Supabase Service Role Key (for admin operations)
# Only set this for server-side operations, never expose in frontend
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# API Configuration
VITE_API_BASE_URL=https://api.ermits-cybersoluce.com
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Security Configuration
VITE_CSP_REPORT_URI=https://report.ermits-cybersoluce.com/csp
VITE_ALLOWED_ORIGINS=https://ermits-cybersoluce.com,https://app.ermits-cybersoluce.com

# Development Configuration
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# Email Configuration (for notifications)
VITE_SMTP_HOST=smtp.your-provider.com
VITE_SMTP_PORT=587
VITE_FROM_EMAIL=noreply@ermits-cybersoluce.com

# Third-party Integrations
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Storage Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.csv,.xlsx,.json

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_UPLOAD_RATE_LIMIT=10

# Session Management
VITE_SESSION_TIMEOUT=28800
VITE_REMEMBER_ME_DURATION=2592000

# Compliance Defaults
VITE_DEFAULT_FRAMEWORKS=SOC 2,ISO 27001
VITE_REQUIRED_FRAMEWORKS=

# Organization Defaults
VITE_DEFAULT_TIMEZONE=UTC
VITE_DEFAULT_DATE_FORMAT=MM/dd/yyyy
VITE_DEFAULT_THEME=light

# Backup Configuration
VITE_BACKUP_ENABLED=true
VITE_BACKUP_FREQUENCY=daily
VITE_BACKUP_RETENTION_DAYS=30

# Monitoring
VITE_HEALTH_CHECK_URL=/api/health
VITE_STATUS_PAGE_URL=https://status.ermits-cybersoluce.com